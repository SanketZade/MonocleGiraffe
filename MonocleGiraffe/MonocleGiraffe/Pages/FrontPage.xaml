                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ALBUMS" VerticalAlignment="Center" Style="{StaticResource GroupHeaderStyle}"/>
