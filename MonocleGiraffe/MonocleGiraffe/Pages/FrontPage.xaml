                                    <TextBlock Text="{Binding Favourites.Count}" Style="{StaticResource CountTextStyle}"/>
                                </Border>
                                <HyperlinkButton Grid.Column="2" HorizontalAlignment="Right" Padding="0" Command="{Binding ViewAllCommand}" CommandParameter="favourites">
