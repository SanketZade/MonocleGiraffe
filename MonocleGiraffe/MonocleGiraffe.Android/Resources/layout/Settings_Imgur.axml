<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/AuthLayout"
        android:visibility="gone">
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">
            <EditText
                android:id="@+id/BioEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bio"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ImagePublicSwitch"
            android:text="Make images public"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EnableMessagingSwitch"
            android:text="Enable messaging"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
        <TextView
            android:text="Album privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/AlbumPrivacySpinner"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MatureContentSwitch"
            android:text="Show mature content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
        <Button
            android:text="Save Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SaveSettingsButton"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
    </LinearLayout>
    <Button
        android:text="Sign In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SignInButton"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>